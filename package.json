{
  "name": "react-with-async-fonts",
  "version": "4.0.0",
  "description": "React HoC to handle async loaded fonts",
  "repository": "https://github.com/sergeybekrin/react-with-async-fonts",
  "main": "./lib/index.js",
  "module": "./dist/index.js",
  "scripts": {
    "precommit": "lint-staged",
    "prebuild": "rimraf lib/ dist/",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -d -t es5 -m commonjs --outDir ./lib",
    "build:esm": "tsc -d -t es6 -m es6 --outDir ./dist",
    "prepublishOnly": "npm test && npm run build",
    "jest": "jest --coverage --no-cache",
    "test": "npm run lint && npm run jest",
    "coverage": "cat ./coverage/remapped/lcov.info | coveralls",
    "lint": "tslint src/**/*.{ts,tsx}"
  },
  "files": [
    "lib/",
    "dist/",
    "readme.md"
  ],
  "keywords": [
    "react",
    "fonts",
    "async",
    "webfont",
    "fontloader",
    "react-fonts"
  ],
  "author": "Sergey Bekrin <sergey@bekrin.me> (http://bekrin.me)",
  "license": "MIT",
  "dependencies": {
    "fontfaceobserver": "^2.0.13",
    "hoist-non-react-statics": "^2.3.1",
    "invariant": "^2.2.2",
    "p-cancelable": "^0.3.0"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@types/react": "^16.0.36",
    "coveralls": "^3.0.0",
    "doctoc": "^1.3.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.3",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "jest": {
    "setupFiles": [
      "./.jest.js"
    ],
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.(ts|tsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*",
      "!src/**/*.spec.*"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "jest --findRelatedTests --passWithNoTests",
      "git add"
    ],
    "readme.md": [
      "prettier --write",
      "doctoc --maxlevel 3 --notitle",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
